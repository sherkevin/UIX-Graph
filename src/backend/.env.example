# 环境配置
ENVIRONMENT=development  # development | production

# Database Configuration
# 开发环境使用本地 JSON 文件模拟
# 生产环境使用 MySQL + ClickHouse
DATABASE_URL=sqlite:///./xgraph.db
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=uix_graph
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=uix_graph

# Data Files Path (for development only)
DATA_PATH=../../data

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Feature Flags
ENABLE_CACHING=True
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Graph Database (Optional - for future use)
GRAPH_DB_TYPE=neo4j
GRAPH_DB_URI=bolt://localhost:7687
GRAPH_DB_USER=neo4j
GRAPH_DB_PASSWORD=password
